<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".panel.TedarikciEkleActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text4"
        android:text="Tedarikci Ekle"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"></TextView>

    <ImageView
        android:layout_below="@id/text4"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageEkle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/erdalbakkal"></ImageView>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/imageEkle"
        android:id="@+id/editTextFirmaEkle"
        android:hint="Firma adını giriniz"
        android:inputType="text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"></EditText>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/editTextFirmaEkle"
        android:id="@+id/editTextNoEkle"
        android:hint="Firma numarası giriniz"
        android:inputType="number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"></EditText>

    <EditText
        android:id="@+id/editTextAdresEkle"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/editTextNoEkle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Firma adresi giriniz"
        android:inputType="text"></EditText>

    <Button
        android:layout_below="@id/editTextAdresEkle"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonbackground"
        android:text="Kaydet"
        android:id="@+id/buttonTedarikciKaydet"></Button>

</RelativeLayout>