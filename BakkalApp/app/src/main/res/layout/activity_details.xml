<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".details.DetailsActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageDetail"
        android:src="@drawable/erdalbakkal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:id="@+id/textDetailName"
        android:text="Sakız"
        android:layout_below="@id/imageDetail"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:id="@+id/textDetailStok"
        android:text="10 Adet"
        android:layout_below="@id/textDetailName"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"></TextView>

    <TextView
        android:id="@+id/textDetailPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textDetailStok"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="3 TL"
        android:textColor="@color/black"
        android:textSize="22sp"></TextView>

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_below="@id/textDetailPrice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Kaç adet"
        android:inputType="number"></EditText>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonbackground"
        android:id="@+id/buttonDetail"
        android:text="Sepete Ekle"
        android:layout_below="@id/editTextNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"></Button>

</RelativeLayout>