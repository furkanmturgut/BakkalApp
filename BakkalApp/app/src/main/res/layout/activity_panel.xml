<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".panel.PanelActivity">

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Yönetim Paneli"
        android:textColor="@color/black"
        android:textSize="30sp"></TextView>

    <ImageView
        android:layout_below="@id/textName"
        android:id="@+id/imageErdal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/erdalbakkal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"></ImageView>


    <EditText
        android:id="@+id/editPanelMail"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_below="@id/imageErdal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="Admin giriniz"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"></EditText>

    <EditText
        android:inputType="textPassword"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:id="@+id/editPanelPass"
        android:layout_below="@id/editPanelMail"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:hint="Şifre giriniz"
        android:textColor="@color/black"></EditText>

    <Button
        android:id="@+id/buttonPanelHome"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/editPanelPass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonbackground"
        android:text="Panele Git"></Button>

</RelativeLayout>